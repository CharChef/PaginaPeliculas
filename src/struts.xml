<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD
Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" extends="struts-default">
			
		<action name="index" class="paginaPelicula.controlador.action.ManejadorAction" method="executeListarPeliculas"> 
			<result name="success">index.jsp</result>
		</action>
		
		<action name="mostrarPeliculas" class="paginaPelicula.controlador.action.ManejadorAction" method="executeListarPeliculas"> 
			<result name="success">principal.jsp</result>
			<result name="input">principal.jsp</result>
		</action>
		
		<action name="ingresar" class="paginaPelicula.controlador.action.LoginAction"> 
			<result name="success">login.jsp</result>
			<result name="error">errorAcceso.jsp</result>
		</action>
		
		<action name="editarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeListarPeliculas"> 
			<result name="success">editar.jsp</result>
		</action>
		
		<action name="mostrarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeBuscarPelicula"> 
			<result name="success">mostrar.jsp</result>
			<result name="input">mostrar.jsp</result>
		</action>
		
		<action name="mostrarPeliculaAct" class="paginaPelicula.controlador.action.ManejadorAction" method="executeBuscarPelicula"> 
			<result name="success">mostrarLogueado.jsp</result>
			<result name="input">mostrarLogueado.jsp</result>
		</action>
				 
		<action name="finEdicion" class="paginaPelicula.controlador.action.ManejadorAction" method="executeCambiarInsertar"> 
			<result name="input">intermedio.jsp</result>
		</action>
		 
		<action name="agregarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeCambiarInsertar"> 
			<result name="input">intermedio2.jsp</result>
		</action>
		 
		<action name="agregarNuevaPelicula"> 
			<result>agregar.jsp</result>
		</action>
		 
		<action name="buscarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeBuscarPelicula"> 
			<result name="success">edicion.jsp</result>
		</action>
		
		<action name="eliminarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeListarPeliculas"> 
			<result name="success">buscar.jsp</result>
		</action>
		
		<action name="buscaryEliminarPelicula" class="paginaPelicula.controlador.action.ManejadorAction" method="executeBorrarPelicula"> 
			<result name="success">borradoExito.jsp</result>
		</action>
		
	</package>
</struts>